<div class="modal-body text-center">
    <h3 class="modal-title" id="modal-label">@Label</h3>
    <a class="btn btn-dark w-100 mb-2"
       @onclick="() => OnSwitchMode.InvokeAsync(HomeModalMode.SignupEmail)">
       Sign up with Email
   </a>
    <p class="mt-2">
        Already have an account?
        <button type="button"
                class="btn btn-link p-0"
                @onclick="() => OnSwitchMode.InvokeAsync(HomeModalMode.SignIn)">
            Sign in</button>
    </p>
</div>

@code
{
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<HomeModalMode> OnSwitchMode { get; set; }
}
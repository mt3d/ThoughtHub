<article class="card border-0 shadow-sm mb-4 article-card">
    <div class="card-body">

            @if (Article.Publication != null)
            {
                <ArticleCardAuthor DisplayPublication
                                   PublicationName="@Article.Publication.Name"
                                   PublicationUrl="@Article.Publication.Url"
                                   PublicationImageUrl="@Article.Publication.PublicationImageUrl"
                                   AuthorName="@Article.Author.FullName"
                                   AuthorUrl="@Article.Author.Url"
                                   />
            }
            else
            {
                <ArticleCardAuthor AuthorName="@Article.Author.FullName"
                                   AuthorUrl="@Article.Author.Url"
                                   AuthorImageUrl="@Article.Author.ProfilePic"
                                   />
            }

        <!-- Title + Description -->
        <a class="text-decoration-none text-dark d-flex" href="@Article.Url">
            <div class="flex-grow-1">
                <h5 class="fw-bold mb-1">@Article.Title</h5>
                <p class="text-muted mb-2">@Article.Description</p>
                <div class="d-flex align-items-center small text-muted">
                    <span>@Article.UpdatedAt.ToString("MMM d, yyyy")</span>
                    <span class="ms-3"><i class="bi bi-hand-thumbs-up"></i> @Article.ClapsCount</span>
                    <span class="ms-3"><i class="bi bi-chat"></i> @Article.CommentsCount</span>
                </div>
            </div>
            <img src="@Article.Image" alt="@Article.Title" class="ms-3 rounded" width="120" height="80">
        </a>
    </div>
</article>

@code {
    [Parameter]
    public ArticleCardModel Article { get; set; }
}
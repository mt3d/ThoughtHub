<div class="@ClassBuilder.Value" aria-current="false">
	<a class="hub-tab-link" href="#" role="tab">
		@if (Header is not null)
		{
			@Header
		}
		else if (HeaderText is not null)
		{
			<button
				class="hub-tab-button"
				type="button"
				role="tab"
				@onclick="HandleOnClick"
			>
				@HeaderText
			</button>
		}
	</a>
</div>

<style>
	/* ---------------------- */
	/*        TAB BAR         */
	/* ---------------------- */

	.tab-bar-wrapper {
		position: sticky;
		top: 57px;
		background: #fff;
		z-index: 500;
	}

	.tab-bar-container {
		display: flex;
		justify-content: center;
	}

	.tab-bar-inner {
		padding-top: 16px;
		width: 100%;
		max-width: 680px;
		margin: 0 24px;
	}

	.tab-scroll-area {
		position: relative;
	}

	.tab-scroll-content {
		display: flex;
		align-items: center;
		overflow-x: auto;
		overflow-y: hidden;
		scrollbar-width: none;
		box-shadow: inset 0 -1px 0 #f2f2f2;
	}

	.tab-list {
		display: flex;
		min-width: max-content;
	}


</style>
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ThoughtHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/CustomStyle.css" rel="stylesheet" />
  </head>
  <body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="#">ThoughtHub</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navContent">
          <form class="d-flex ms-auto me-3" role="search">
            <input class="form-control form-control-sm" type="search" placeholder="Search" aria-label="Search">
          </form>
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="#">Our Story</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Membership</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#writeModal">Write</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#signinModal">Sign in</a>
            </li>
            <li class="nav-item ms-2">
                <a class="btn btn-outline-light btn-sm" btn-sm" data-bs-toggle="modal" data-bs-target="#signupModal">Get started</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container mt-4">
        <!-- HERO / FEATURED -->
        <section class="hero">
        <div class="row align-items-center">
            <div class="col-md-8">
            <h1 class="display-6 fw-bold">Stories that matter — curated for you</h1>
            <p class="lead">Great writing on technology, culture, business, and more. Read, clap, and share.</p>
            <div>
                <a class="btn btn-light btn-sm me-2" href="#">Discover more</a>
                <a class="btn btn-outline-light btn-sm" href="#">Write</a>
            </div>
            </div>
            <div class="col-md-4 text-md-end d-none d-md-block">
            <img src="https://picsum.photos/220/140" alt="featured" class="rounded" />
            </div>
        </div>
    </section>
        
    <partial name="_FooterPartial" />

    <partial name="Modals/_WriteModal" />
    <partial name="Modals/_SigninModal" />
    <partial name="Modals/_GetStartedModal" />

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>